<view class="search">
  <SearchInput></SearchInput>
</view>
<view class="cate_view">
  <!-- 左侧
  高度 = 视口的宽度（100vh）  - 头部搜索框的高度 
 -->
  <view class="cate_menus">
    <view bindtap="handleMenuTap" data-index="{{index}}"  class="menu_item {{currentIndex===index?'active':''}}" wx:for="{{leftMenus}}" wx:key="item">{{item}}</view>
  </view>
  <!-- 右侧
   高度 = 视口的宽度（100vh）  - 头部搜索框的高度 
 -->
  <scroll-view scroll-y scroll-top="{{scrollTop}}" class="cate_goods">
    <view class="goods_group" wx:for="{{rightGoods}}" wx:for-item="item1" wx:for-index="index1" wx:key="cat_id">
      <!-- 
      item1 ={ 
        cat_id	:	3
        cat_name	:	电视
        cat_pid	:	1
        cat_level	:	1
        cat_deleted	:		false
        cat_icon	:	
	      children：[。。。]
      }
     -->
      <view class="goods_group_title"> / {{item1.cat_name}} / </view>
      <view class="goods_group_content">
        <navigator url="/pages/goods_list/index?cid={{item2.cat_id}}" wx:for="{{item1.children}}" wx:for-item="item2" wx:for-index="index2"  wx:key="cat_id" class="goods_item">
          <image mode="widthFix" src="{{item2.cat_icon}}"></image>
          <view class="item_name">{{item2.cat_name}}</view>
        </navigator>
      </view>
    </view>
  </scroll-view>
</view>
